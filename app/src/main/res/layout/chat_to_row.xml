<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">


    <TextView
            android:background="@drawable/rounded_edittext_register_login"
            android:padding="16dp"
            android:text="This is my message"
            android:maxWidth="240dp"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:id="@+id/text_to_row"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/image_chat_to_row"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
    <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/black"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:srcCompat="@android:drawable/btn_star_big_on"
            android:id="@+id/image_chat_to_row"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>